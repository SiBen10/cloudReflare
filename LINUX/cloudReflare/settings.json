{
    "application": {
        "single_instance_guid": "",
    },
    "main_window": {
        "title": "cloudReflare",
        "icon": "app-icon.png",
        "default_size": [624, 800],
        "minimum_size": [0, 0],
        "maximum_size": [624, 800],
        "center_on_screen": true,
    },
    "web_server": {
        "listen_on": ["127.0.0.1", 0],
        "www_directory": "httpd.www",
        "index_files": ["index.php"],
        "cgi_interpreter": "php-cgi",
        "cgi_extensions": ["php"],
        "404_handler": "/pretty-urls.php",
        "hide_files": []
    },
    "chrome": {
        "log_file": "debug.log",
        "log_severity": "disable",
        "cache_path": "webcache",
        "remote_debugging_port": 0,
        "command_line_switches": {
            "enable-media-stream": "",
            "enable-system-flash": ""
        },
        "enable_downloads": true,
        "context_menu": {
            "enable_menu": false,
            "navigation": false,
            "print": false,
            "view_source": false,
            "devtools": false
        }
    }
}
